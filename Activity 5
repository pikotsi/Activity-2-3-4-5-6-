using System;

namespace TestTime
{
    public struct Time
    {
        private readonly int minutes;

        public Time(int hh, int mm)
        {
            minutes = 60 * hh + mm;
        }

        public Time(int totalMinutes)
        {
            minutes = totalMinutes;
        }

        public int Hour => minutes / 60;
        public int Minute => minutes % 60;

        public override string ToString()
        {
            return $"{Hour:D2}:{Minute:D2}";
        }

        public static Time operator +(Time t1, Time t2)
        {
            return new Time(t1.minutes + t2.minutes);
        }

        public static Time operator -(Time t1, Time t2)
        {
            return new Time(t1.minutes - t2.minutes);
        }
    }

    class Program
    {
        static void Main()
        {
            
            Console.Write("Enter first time (hh:mm): ");
            string[] time1 = Console.ReadLine().Split(':');
            int h1 = int.Parse(time1[0]);
            int m1 = int.Parse(time1[1]);

            Console.Write("Enter second time (hh:mm): ");
            string[] time2 = Console.ReadLine().Split(':');
            int h2 = int.Parse(time2[0]);
            int m2 = int.Parse(time2[1]);

            Time t1 = new Time(h1, m1);
            Time t2 = new Time(h2, m2);

            Time sum = t1 + t2;
            Time diff = t1 - t2;

            Console.WriteLine("Added Time: " + sum);
            Console.WriteLine("Subtracted Time: " + diff);
        }
    }
}
